---
import type { HeroContent, ProductData } from '../../utils/types';
import { LAZY_MEDIA_PLACEHOLDER } from '../../utils/lazyMedia';

export interface Props {
  hero: HeroContent;
  product: ProductData;
}

const { hero, product } = Astro.props satisfies Props;
const gallery = product.gallery.length ? product.gallery : [product.mainImage];
---

<section class="relative flex flex-col gap-6 rounded-xl bg-gradient-to-b from-slate-900/60 to-slate-950 p-6 shadow-2xl ring-1 ring-white/10 sm:grid sm:grid-cols-2 sm:gap-10 sm:p-10">
  <div class="relative order-1 sm:order-1">
    {hero.badgeLines?.length ? (
      <div class="absolute -left-11 -top-4 z-40 hidden h-20 w-20 rounded-full bg-warning-500 text-center text-xs font-bold uppercase text-white shadow-glow sm:flex sm:flex-col sm:items-center sm:justify-center animate-floatBadge">
        {hero.badgeLines.map((line) => <span>{line}</span>)}
      </div>
    ) : null}
    <div class="relative overflow-hidden rounded-xl border border-white/10 bg-slate-900/50 shadow-xl sm:flex sm:h-full sm:flex-col">
      <div class="group flex h-full flex-col gap-5">
        <div class="relative flex-1 overflow-hidden rounded-xl bg-slate-950/60 ring-1 ring-white/5">
          <div class="swiper h-full w-full" data-hero-main>
            <div class="swiper-wrapper">
              {gallery.map((image) => (
                <div class="swiper-slide bg-gradient-to-br from-slate-900 via-slate-900 to-slate-950">
                  <img
                    src={LAZY_MEDIA_PLACEHOLDER}
                    data-src={image.url}
                    alt={image.alt}
                    class="lazyload h-full w-full object-contain"
                  />
                  <noscript>
                    <img src={image.url} alt={image.alt} class="h-full w-full object-contain" />
                  </noscript>
                </div>
              ))}
            </div>
          </div>
          <button
            type="button"
            class="absolute left-4 top-1/2 z-20 hidden -translate-y-1/2 rounded-full border border-white/20 bg-slate-900/40 p-2 text-white/90 shadow-lg shadow-black/20 transition group-hover:flex hover:bg-slate-900/60"
            data-hero-prev
            aria-label="Prev"
          >
            <i data-lucide="chevron-left" class="h-5 w-5"></i>
          </button>
          <button
            type="button"
            class="absolute right-4 top-1/2 z-20 hidden -translate-y-1/2 rounded-full border border-white/20 bg-slate-900/40 p-2 text-white/90 shadow-lg shadow-black/20 transition group-hover:flex hover:bg-slate-900/60"
            data-hero-next
            aria-label="Next"
          >
            <i data-lucide="chevron-right" class="h-5 w-5"></i>
          </button>
        </div>
        <div class="flex items-center gap-3">
          <div class="swiper w-full select-none rounded-xl bg-slate-950/70 py-3 ring-1 ring-white/5" data-hero-thumbs>
            <div class="swiper-wrapper">
              {gallery.map((image) => (
                <div class="swiper-slide overflow-hidden rounded-xl border border-transparent transition-all duration-200">
                  <img
                    src={LAZY_MEDIA_PLACEHOLDER}
                    data-src={image.url}
                    alt={image.alt}
                    class="lazyload h-full w-full object-cover"
                  />
                  <noscript>
                    <img src={image.url} alt={image.alt} class="h-full w-full object-cover" />
                  </noscript>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="order-2 flex flex-col gap-6 sm:order-2 sm:justify-between sm:h-full">
    <div>
      <span class="inline-flex items-center gap-2 rounded-full bg-brand-500/20 px-4 py-2 text-sm font-semibold text-brand-100 ring-1 ring-brand-500/40">
        <i data-lucide={hero.socialProof.icon} class="icon-solid h-4 w-4 text-brand-100" aria-hidden="true"></i>
        {hero.socialProof.text}
      </span>
      <h1 class="mt-4 text-3xl font-black text-white sm:text-4xl lg:text-5xl">
        {hero.headline}
      </h1>
      <p class="mt-3 text-base leading-relaxed text-white/80 sm:text-lg" set:html={hero.description}></p>
      {hero.highlights?.length ? (
        <ul class="mt-4 grid gap-2 text-sm text-white/75 sm:grid-cols-3">
          {hero.highlights.map((item) => (
            <li class="flex items-center gap-2">
              <span class="h-1.5 w-1.5 rounded-full bg-brand-500"></span>
              {item}
            </li>
          ))}
        </ul>
      ) : null}
    </div>

    <div class="rounded-2xl border border-white/10 bg-slate-900/70 p-4 shadow-lg sm:mt-auto">
      <div class="flex flex-col gap-3">
        <div class="flex items-center justify-between">
          <div class="text-xs font-semibold uppercase tracking-wide text-warning-500">
            {hero.inventoryCard.countdownLabel}
          </div>
          <div data-countdown="main" class="text-2xl font-black text-white"></div>
        </div>
        <div>
          <div class="flex items-center justify-between text-xs text-white/70">
            <span>{hero.inventoryCard.stockLabel}</span>
            <span>
              <span data-stock-text="main" class="font-bold text-warning-500"></span>
              &nbsp;{hero.inventoryCard.stockUnit}
            </span>
          </div>
          <div class="mt-2 h-3 overflow-hidden rounded-full bg-white/10">
            <div data-stock-bar class="stock-stripes h-3 w-full animate-progressStripes rounded-full"></div>
          </div>
          <p data-stock-alert class="mt-2 text-xs font-semibold text-warning-500"></p>
        </div>
        {hero.inventoryCard.trustSignals?.length ? (
          <div class="flex flex-wrap items-center gap-3 text-xs text-white/60">
            {hero.inventoryCard.trustSignals.map((signal) => (
              <div class="flex items-center gap-1">
                <i data-lucide={signal.icon} class="h-4 w-4 text-success-500" aria-hidden="true"></i>
                {signal.text}
              </div>
            ))}
          </div>
        ) : null}
      </div>
      <div>
        <a
          href="#purchase"
          class="cta-scroll group relative mt-12 mb-4 flex w-full items-center justify-center gap-2 rounded-full bg-brand-500 px-6 py-4 text-lg font-black text-white shadow-glow transition hover:bg-brand-600 focus:outline-none focus:ring-4 focus:ring-brand-500/60 animate-pulseCta"
          role="button"
        >
          <span class="absolute -top-6 inline-flex items-center gap-1 rounded-full bg-success-500 px-3 py-1 text-xs font-semibold text-slate-900 shadow-lg">
            <i data-lucide={hero.cta.banner.icon} class="h-3 w-3" aria-hidden="true"></i>
            {hero.cta.banner.text}
          </span>
          {hero.cta.label}
          <i data-lucide={hero.cta.icon} class="h-5 w-5 transition-transform group-hover:translate-x-1" aria-hidden="true"></i>
        </a>
      </div>
      <p class="text-center text-xs text-white/60">{hero.cta.note}</p>
    </div>
  </div>
</section>

<style lang="less">
  /* 引入拆分後的 Less 檔案，保持與 Astro 元件相同的作用域 */
  @import './FlashDeal.less';
</style>
