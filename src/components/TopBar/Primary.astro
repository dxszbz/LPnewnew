---
export interface Props {
  icon: string;
  message: string;
  countdownLabel: string;
}

const { icon, message, countdownLabel } = Astro.props satisfies Props;
---

<div class="fixed inset-x-0 top-0 z-50 bg-warning-500 text-slate-950">
  <div class="mx-auto flex w-full max-w-screen-xl items-center justify-between px-4 py-2 text-sm font-semibold tracking-wide text-slate-900 sm:px-6 lg:px-10">
    <span class="inline-flex items-center gap-1 text-left">
      <i data-lucide={icon} class="h-4 w-4 animate-wiggle text-slate-900" aria-hidden="true"></i>
      {message}
    </span>
    <span class="hidden text-right text-xs text-slate-900 sm:block">
      {countdownLabel}
      <span data-countdown="top" class="font-black"></span>
    </span>
  </div>
</div>
