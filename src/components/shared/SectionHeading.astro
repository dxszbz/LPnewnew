---
export interface Props {
  eyebrow?: string;
  title: string;
  description?: string;
  alignment?: 'left' | 'center';
}

const {
  eyebrow,
  title,
  description,
  alignment = 'left'
} = Astro.props satisfies Props;

const alignClass = alignment === 'center' ? 'text-center mx-auto' : 'text-left';
---

<div class={`space-y-3 ${alignClass} max-w-2xl`}>
  {eyebrow ? (
    <p class="text-xs font-semibold uppercase tracking-[0.2em] text-brand-100">
      {eyebrow}
    </p>
  ) : null}
  <h2 class="text-3xl font-bold text-white sm:text-4xl">{title}</h2>
  {description ? (
    <p class="text-sm leading-relaxed text-white/70 sm:text-base">
      {description}
    </p>
  ) : null}
</div>
