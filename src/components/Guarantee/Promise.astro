---
import SectionHeading from '../shared/SectionHeading.astro';
import type { GuaranteeContent } from '../../utils/types';

export interface Props {
  content: GuaranteeContent;
}

const { content } = Astro.props satisfies Props;
---

<section class="mt-16 rounded-3xl border border-brand-500/30 bg-slate-900/50 p-6 sm:p-10">
  <SectionHeading
    title={content.title}
    description={content.description}
  />
  <div class="mt-6 rounded-3xl border border-dashed border-brand-500/40 bg-slate-950/60 p-6">
    <div class="grid gap-6 md:grid-cols-4">
      {content.bullets.map((item) => (
        <div class="flex items-start gap-3">
          <span class="mt-1 inline-flex h-6 w-6 items-center justify-center rounded-full bg-success-500/20 text-success-500">âœ“</span>
          <div class="text-sm text-white/80">{item}</div>
        </div>
      ))}
    </div>
    <a
      href={content.ctaHref}
      class="cta-scroll block mt-7 w-full rounded-full bg-brand-500 px-6 py-4 text-center text-lg font-black text-white shadow-glow transition hover:bg-brand-600 focus:outline-none focus:ring-4 focus:ring-brand-500/60"
      role="button"
    >
      {content.ctaLabel}
    </a>
    <p class="mt-2 text-center text-xs text-white/60">{content.note}</p>
  </div>
</section>
