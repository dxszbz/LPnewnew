---
import type { FaqEntry } from '../../utils/types';

export interface Props {
  title: string;
  entries: FaqEntry[];
}

const { title, entries } = Astro.props satisfies Props;
---

<section class="mt-16 rounded-3xl border border-slate-200 bg-slate-50 p-6 dark:border-white/5 dark:bg-slate-900/40 sm:p-10">
  <h2 class="text-3xl font-bold text-slate-900 dark:text-white">{title}</h2>
  <dl class="mt-6 space-y-4 text-sm text-slate-700 dark:text-white/70">
    {entries.map((item, index) => (
      <div class="rounded-2xl bg-white p-4 shadow-sm dark:bg-slate-950/50" data-faq-item={index}>
        <dt class="font-semibold text-slate-900 dark:text-white">{item.question}</dt>
        <dd class="mt-2">{item.answer}</dd>
      </div>
    ))}
  </dl>
</section>
