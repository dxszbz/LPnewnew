---
import type { FaqEntry } from '../../utils/types';

export interface Props {
  title: string;
  entries: FaqEntry[];
}

const { title, entries } = Astro.props satisfies Props;
---

<section class="mt-16 rounded-3xl border border-white/5 bg-slate-900/40 p-6 sm:p-10">
  <h2 class="text-3xl font-bold text-white">{title}</h2>
  <dl class="mt-6 space-y-4 text-sm text-white/70">
    {entries.map((item, index) => (
      <div class="rounded-2xl bg-slate-950/50 p-4" data-faq-item={index}>
        <dt class="font-semibold text-white">{item.question}</dt>
        <dd class="mt-2">{item.answer}</dd>
      </div>
    ))}
  </dl>
</section>
